{
  "endOfLine": "lf",
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.{js,jsx}",
      "options": {
        "printWidth": 80,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "preserve",
        "jsxSingleQuote": false,
        "jsxBracketSameLine": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "avoid"
      }
    },
    {
      "files": [
        "*.html"
      ]
    }
  ]
}
